# configuration aliases
alias zshconfig='$EDITOR -p $HOME/.zshrc $HOME/dotfiles/shell/zshconfig/*'
alias zource="source ~/.zshrc"
alias vimconfig='$EDITOR ~/.vimrc'
alias termconfig='$EDITOR ~/.alacritty.yml'

alias gre="git recent"

alias public_key='more ~/.ssh/id_rsa.pub'
alias ssh_key="public_key"

#open sticky file
alias sticky="nvim ~/Documents/sticky.txt"
alias open="xdg-open"

alias hg='history | grep'
